@model Proyectoflores.Models.invernadero
@{
    ViewBag.Title = "Registrar Nuevo Invernadero";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">@ViewBag.Title</h2>

<script>
    function ValidateNumber(e) {
        var evt = (e) ? e : window.event;
        var charCode = (evt.keyCode) ? evt.keyCode : evt.which;
        if (charCode > 31 && (charCode < 48 || charCode > 57)) {
            return false;
        }
        return true;
    };

</script>

@*NuevoInvernadero nombre metodo *@
@*Invernadero nombre del controlador *@
@using (Html.BeginForm("NuevoInvernadero", "Invernadero", FormMethod.Post))
{
    <div class="col-md-12">
        <div class="col-md-6">
            <b>@Html.LabelFor(d => d.numeroinvernadero)</b> 
            @Html.TextBoxFor(d => d.numeroinvernadero, new { onkeydown = "return ValidateNumber(event);", @class = "form-control" })
            @Html.ValidationMessageFor(d => d.numeroinvernadero, null, new { @class = "red"})
        </div>
        <div class="col-md-6">
            <b>@Html.LabelFor(d => d.idfinca)</b>          
            @Html.DropDownListFor(d => d.idfinca, new SelectList(Model.FincaCollection, "Idfinca", "Nombrefinca"), "Seleccione finca", new { @class = "form-control" })
            @Html.ValidationMessageFor(d => d.idfinca, null, new { @class = "red" })
        </div>
    </div>

    <div style="text-align:right">
        <input value="Guardar" class="btn btn-primary" type="submit" />
    </div>
}