@model List<Proyectoflores.Models.ViewModelsFinca.ListFincaViewModel>
@{
    ViewBag.Title = "Lista de Fincas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

<div class="row" style="text-align: right; padding:5px;">
    <a href="~/finca/NuevaFinca" class="btn btn-primary">Nuevo</a>
</div>

<div class="row">
    <div class="col-md-12">
        <table class="table">
            <tr>
                <th>Id</th>
                <th>Nombre finca</th>
                <th>Ubicación</th>
                <th></th>
            </tr>
            @foreach (var oElemento in Model)
            {
                <tr>
                    <td>@oElemento.Idfinca</td>
                    <td>@oElemento.Nombrefinca</td>
                    <td>@oElemento.Ubicacion</td>
                    <td>
                        <a class="btn btn-default" href="~/finca/EditarFinca/@oElemento.Idfinca">Editar</a>
                        <a class="btn btn-danger" href="~/finca/EliminarFinca/@oElemento.Idfinca">Eliminar</a>
                    </td>
                </tr>

            }
        </table>
    </div>
</div>
